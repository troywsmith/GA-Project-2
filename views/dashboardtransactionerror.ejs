<% include ./partials/head %>
    <div class="dashboardpage">
      <h2 class="pageheader">Welcome,
        <%= user.username %> !
      </h2>

      <div class="paymentdiv">
        <form action="/newtransaction" method="POST" class="paymentform">
          <h3>Exchange SWAP coins</h3>
          <p class="error">
              "Invalid username/password combination. Please try again."
          </p>
            <input type="text" id="ajax" list="json-datalist" name="selectedusername" placeholder="username">
              <datalist id="json-datalist">
              <% users.forEach(user => { %>
                <option value="<%= user.username %>">
                  <%= user.username %>
                </option>
                <% }) %>
              </datalist>
          <input type="number" name="amount" placeholder="amount">
          <button type="submit">Send</button>
        </form>
      </div>


      <div class="activitywalletdiv">


        <div class="activityfeed">
          <h2>Recent Activity</h2>
          <ul>
            <hr style="width: 90%">
            <% all.forEach(transaction => { %>
              <li>
                <h4>
                  <%= transaction.username %>
                    sent
                    <%= transaction.receiving_username %>
                      <%= transaction.amount %>
                        coins
                </h4>
                <h5>
                  <%= transaction.dateandtime %>
                </h5>
                <hr>
              </li>
              <% }) %>
          </ul>
        </div>


        <div class="walletbalancesdiv">
          <h2>Your Wallet</h2>
          <hr style="width: 85%">
          <div class="coinnameamount">
            <ul class="walletcoinname">
              <li>Balance: </li>
            </ul>
            <ul class="walletcoins">
              <li>
                <%= user.bal%> SWAP
              </li>
            </ul>
          </div>
        </div>



      </div>
    </div>






    <% include ./partials/footer %>
