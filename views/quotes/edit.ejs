<!doctype html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <div class="page-container">
      <h2 class="page-title">Write a new quote!</h2>

      <form action="/quotes/<%= quote.id %>?_method=PUT" method="POST">
        <label>Author</label>
        <input value="<%= quote.author %>" type="text" name="author" />
        <label>Content</label>
        <input value="<%= quote.content %>" type="text" name="content" />
        <label>Category ID</label>
        <input value="<%= quote.category_id %>" type="number" name="category_id" />
        <button type="submit">Update Quote!</button>
      </form>
    </div>
  </body>
</html>
